<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <!-- <xacro:property name="DOCK_MASS" value="0.01"/> -->

    <xacro:property name="FEM_WJ_X" value="-0.070807"/>
    <xacro:property name="FEM_WJ_Y" value="0.02"/>
    <xacro:property name="FEM_WJ_Z" value="0.064307"/>

    <!-- FROM ORIGIN -->
    <xacro:macro name="FEM_MOTOR_WHEEL_JOINT_ORIGIN">
        <origin xyz="${FEM_WJ_X} ${FEM_WJ_Y} ${FEM_WJ_Z}" rpy="${PI_2} ${PI} 0" />
    </xacro:macro>


    <xacro:property name="FEM_WJ_TCX_OFFSET_X" value="0.007307"/>
    <xacro:property name="FEM_WJ_TCX_OFFSET_Y" value="0.061307"/>
    <xacro:property name="FEM_WJ_TCX_OFFSET_Z" value="-0.02"/>

    <!-- FROM TROCOX JOINT -->
    <xacro:macro name="FEM_MOTOR_WHEEL_JOINT_ORIGIN_TCX_OFFSET">
        <origin xyz="${FEM_WJ_TCX_OFFSET_X} ${FEM_WJ_TCX_OFFSET_Y} ${FEM_WJ_TCX_OFFSET_Z} " rpy="-${PI_2} 0 -${PI_2}" />
    </xacro:macro>

    <!-- FROM TROCOX JOINT -->
    <xacro:macro name="FEMUR_JOINT_ORIGIN_TCX_OFFSET">
        <origin xyz="0 -0.004 0" rpy="0 -${PI_2} 0" />
    </xacro:macro>

<!-- ########################## HEXAPOD LEG GENERATOR ############################ -->
    <xacro:macro name="generate_femur" params="side">

<!-- ########################## FEM WHEEL ############################ -->
        <link name="fem_motor_wheel_link">
            <xacro:FEM_MOTOR_WHEEL_JOINT_ORIGIN_TCX_OFFSET/>
            <collision>
                <xacro:add_stl scale="${SCALE}" fname="ax12_wheel_faceOrigin"/>
            </collision>

            <visual>
                <xacro:add_stl scale="${SCALE}" fname="ax12_wheel_faceOrigin"/>
            </visual>

            <xacro:MINIMUM_INERTIAL/>
        </link>

        <joint name="fem_motor_wheel_joint" type="revolute" >
            <!-- <xacro:FEM_MOTOR_WHEEL_JOINT_ORIGIN/> -->
            <xacro:FEM_MOTOR_WHEEL_JOINT_ORIGIN_TCX_OFFSET/>
            <parent link="trocox_link"/>
            <child link="fem_motor_wheel_link"/>
            <axis xyz="0 1 0" rpy="0 0 0"/>
            <!-- <limit upper="${PI}" lower="${PI}" effort="10000" velocity="1000"/> -->
            <limit upper="1.0" lower="-1.0" effort="1000.0" velocity="0.5"/>
            <!-- <joint_properties damping="1.0" friction="1.0"/> -->
        </joint>

         <gazebo reference="fem_motor_wheel_link">
             <mu1 value="${HEX_MU1}"/>
             <mu2 value="${HEX_MU2}"/>
             <kp value="${HEX_KP}"/>
             <kd value="${HEX_KD}"/>
              <material>Gazebo/Blue</material>
        </gazebo>

<!-- ########################## FEMUR ############################ -->
        <link name="femur_link">
            <collision>
                <xacro:add_stl scale="${SCALE}" fname="femur_pPls"/>
            </collision>

            <visual>
                <xacro:add_stl scale="${SCALE}" fname="femur_pPls"/>
            </visual>

            <xacro:MINIMUM_INERTIAL/>
        </link>

        <joint name="femur_joint" type="fixed" >
            <xacro:FEMUR_JOINT_ORIGIN_TCX_OFFSET/>
            <parent link="fem_motor_wheel_link"/>
            <child link="femur_link"/>

        </joint>

         <gazebo reference="fem_motor_wheel_link">
             <mu1 value="${HEX_MU1}"/>
             <mu2 value="${HEX_MU2}"/>
             <kp value="${HEX_KP}"/>
             <kd value="${HEX_KD}"/>
              <material>Gazebo/Blue</material>
        </gazebo>



        <!-- <transmission name="${side}_dock_transmission">
            <type>transmission_interface/SimpleTransmission</type>
            <joint name="dock_${side}_joint"> -->

                <!-- <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface> -->

                <!-- <hardwareInterface>EffortJointInterface</hardwareInterface>
            </joint>
            <actuator name="${side}_dock_actuator">
                <mechanicalReduction>7</mechanicalReduction>
                <hardwareInterface>EffortJointInterface</hardwareInterface>
            </actuator>
        </transmission> -->

    </xacro:macro>
<!-- ########################## END DOCK GENERATOR ############################ -->

</robot>
